<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Planificador.Paginas.Tareas"
             Title="Tareas">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#FFFFFF">
            <Button Text="Crear una nueva tarea" BackgroundColor="AliceBlue" TextColor="Black" Command="{Binding AbrirNuevaTareaCommand}"/>
            <ListView x:Name="tareasList" ItemsSource="{Binding ListaTareas}" ItemTapped="tareasList_ItemTapped_1">
                <ListView.ItemTemplate >
                    <DataTemplate >
                        <TextCell Text="{Binding Titulo}" Detail="{Binding Descripcion}" TextColor="{Binding TextColor}" DetailColor="Gray">
                            <TextCell.ContextActions>
                                <MenuItem Text="Eliminar" Clicked="MenuItem_Clicked" CommandParameter="{Binding Id}"/>
                            </TextCell.ContextActions>
                        </TextCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>